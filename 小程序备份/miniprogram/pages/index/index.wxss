
.container{
  width: 100%;
}


/* banner 区域 */
.swiper-outer{
  width: 100%;
  height: 500rpx;
  overflow: hidden;
}

.swiper-item image{
  width: 100%;
  height: 100%;
}



/* 搜索栏 */
.search-block-outer{
  padding: 20rpx 60rpx;
  background: white;
}

.search-block-row{
  position: relative;
  overflow: hidden;
  border-bottom: 1rpx solid #EFEEEC;
}

.search-block-row text,
.search-block-row input{
  float: left;
  height: 60rpx;
  line-height: 60rpx;
  padding: 20rpx 0;
}

.sbr-label{
  width: 160rpx;
  color: #999;
}

.sbr-location{
  float: left;
  font-weight:bold;
  font-size:36rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.sbr-input{
  float:left;
  height:60rpx;
  line-height:60rpx;
  padding:20rpx 0;

}

.sbr-input.pholder{
  color: #D8D8DC;
}

.search-block-row .iconfont{
  position: absolute;
  height: 100rpx;
  line-height: 100rpx;
  color: #ccc;
  font-size: 24rpx;
  right: 0;
}

.sbr-placeholder{
  color: red;
}

.search-block-row text.sbr-date{
  height: 50rpx;
  line-height: 50rpx;
  font-weight: bold;
  font-size: 32rpx;
  padding: 0;
}

.search-block-row text.sbr-date-text{
  color: #999;
  margin-left: 40rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  padding: 0;
}

.sb-btn{
  margin: 30rpx 0 20rpx;
  background: #1FC756;
  color: white;
}

.sb-btn:active{
  background: #1c9e46;
}



.price-filter-mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #00000087;
}

.price-filter-outer{
  position: fixed;
  width: 100%;
  background: white;
  height: 300px;
  bottom: -300px;
}

.price-filter-outer.hide{
  display: none;
}

.pf-title{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #ddd;
}

.pf-title .icon-delete2{
  float:right;
  color: #999;
  padding: 0 20rpx;
}

.pf-body{
  padding: 20rpx;
}

.pfb-item{
  margin-bottom: 60rpx;
}

.pfb-title{
  color: #999;
  margin-bottom: 20rpx;
  
}

.pfb-content{
  overflow: hidden;
  margin: 0 20rpx;
}

.pfb-star-item{
  float: left;
  font-size: 24rpx;
  border: 2rpx solid #e2e2e2;
  color: #333333;
  width: 130rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  margin-right: -2rpx;
  box-sizing: border-box;
}

.pfb-star-item.active{
  position: relative;
  color: #179B16;
  border-color: #179B16;
}

.pfb-btn{
  float: left;
  box-sizing: border-box;
  width: calc(50% - 20rpx);
}